{
    "manifest_version": 3,
    "name": "Hacker News Summarizer",
    "version": "1.2.0",
    "description": "Summarizes linked articles on Hacker News.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://news.ycombinator.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}